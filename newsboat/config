auto-reload yes

bind-key l open
bind-key h quit
bind-key j down
bind-key k up
bind-key J next-feed articlelist
bind-key K prev-feed articlelist

bind-key G end
bind-key g home

bind-key a toggle-article-read

bind-key n next-unread

bind-key U show-urls

color listnormal green default
color listnormal_unread magenta default
color listfocus green default bold
color listfocus_unread magenta default bold
color info blue default bold
color article default default

external-url-viewer "urlscan -dc -r 'linkhandler {}'"

browser linkhandler
macro , open-in-browser
macro d set browser "yt-dlp --restrict-filenames" ; open-in-browser ; set browser linkhandler
macro f set browser "firefox" ; open-in-browser ; set browser linkhandler

cache-file ~/.config/newsboat/cache.db
